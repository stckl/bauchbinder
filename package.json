{
  "name": "bauchbinder",
  "version": "4.1.14",
  "description": "Tool f√ºr Bauchbinden in Live-Streams",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "dev:exe": "concurrently \"npm run dev\" \"npm start\" --kill-others",
    "build": "vite build",
    "preview": "vite preview",
    "start": "electron .",
    "generate-icons": "electron-icon-builder --input=assets/Bauchbinder_icon.png --output=assets --flatten",
    "build-companion": "cd companion-module && npm install && npm run build && cd .. && bestzip public/downloads/bauchbinder-companion.zip companion-module/package.json companion-module/dist/",
    "pack-win": "electron-builder build --windows --x64 --publish always",
    "pack-macarm": "electron-builder build --macos --arm64 --publish always"
  },
  "build": {
    "appId": "de.mstockle.bauchbinder",
    "productName": "bauchbinder",
    "directories": {
      "output": "release-builds"
    },
    "files": [
      "dist/**/*",
      "public/**/*",
      "animations/**/*",
      "themes/**/*",
      "assets/icons/**/*",
      "main.js",
      "playoutWin.js",
      "package.json"
    ],
    "mac": {
      "icon": "assets/icons/icon.icns",
      "target": [
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icons/icon.ico",
      "target": [
        "portable",
        "zip"
      ]
    }
  },
  "author": "Michael Stoeckle",
  "dependencies": {
    "@codemirror/autocomplete": "^6.20.0",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/state": "^6.5.4",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.11",
    "@electron/remote": "^2.1.3",
    "animejs": "^4.3.1",
    "codemirror": "^6.0.2",
    "electron-is-dev": "^3.0.1",
    "express": "^5.2.1",
    "fomantic-ui-css": "^2.9.4",
    "font-list": "^2.0.1",
    "handlebars": "^4.7.6",
    "jquery": "^4.0.0",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "vue": "^3.5.27",
    "vuedraggable": "^4.1.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@rollup/plugin-inject": "^5.0.5",
    "@vitejs/plugin-vue": "^6.0.3",
    "bestzip": "^2.2.1",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "vite": "^7.3.1",
    "vite-plugin-electron-renderer": "^0.14.6"
  }
}
